<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotpass_baserelativelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:id="@+id/forgotpass_entercardview"
        android:layout_width="411dp"
        android:layout_height="403dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="5dp"
        tools:layout_editor_absoluteY="92dp">


        <LinearLayout
            android:id="@+id/forgotpasssende_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/forgotpasssend_relativelayoutup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:background="#E0E0E0">

                <ImageButton
                    android:id="@+id/forgotpasssend_imagebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    app:srcCompat="@mipmap/forgotpass_closebutton" />

                <ImageView
                    android:id="@+id/forgotpassend_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/forgotpass_messageimage" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/forgotpasssend_relativelayoutdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="#FFFFFF">


                <TextView
                    android:id="@+id/forgotpasssend_notifytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="29dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/forgotpass_enteremail"
                    android:textAlignment="center"
                    android:textColor="#FFA726"
                    android:textSize="16sp"
                    android:layout_above="@id/forgotpasssend_edittext"
                    />

                <EditText
                    android:id="@+id/forgotpasssend_edittext"
                    android:layout_width="300dp"
                    android:layout_height="51dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/forgotpass_emailhint"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFA726"
                    android:theme="@style/ForgotPassEdittext" />

                <Button
                    android:id="@+id/forgotpasssend_button"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/forgotpass_dialog_button"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/forgotpass_send"
                    android:textColor="#FFA726"
                    android:textSize="20sp"
                    android:layout_below="@id/forgotpasssend_edittext"/>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>