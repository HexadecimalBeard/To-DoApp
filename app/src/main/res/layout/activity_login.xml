<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/button2"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="124dp"
        android:layout_marginStart="124dp"
        android:background="@drawable/activitylogin_button_rounded"
        android:text="Button"
        android:textColor="#FF5364"
        app:layout_constraintBottom_toBottomOf="@+id/activitylogin_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/activitylogin_"
        android:layout_width="411dp"
        android:layout_height="603dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loginscreenblue_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#35495E" />

        <ImageView
            android:id="@+id/loginscreenwhite_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:color/background_light" />

    </LinearLayout>

    <ImageView
        android:id="@+id/activityLogin_Icon"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginEnd="156dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_"
        app:srcCompat="@drawable/todo_icon" />

    <RelativeLayout
        android:id="@+id/activitylogin_relativelayout"
        android:layout_width="348dp"
        android:layout_height="206dp"
        android:layout_marginBottom="172dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/loginactivity_custom_relativelayout"
        app:layout_constraintBottom_toBottomOf="@+id/activitylogin_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityLogin_Icon"
        app:layout_constraintVertical_bias="0.862">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activtylogin_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activtylogin_relativelayout_textview"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/Custom.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#FF5364" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activtylogin_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activtylogin_edittext_email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/Custom.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#FF5364" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/activtylogin_relativelayout_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="LOGIN"
            android:textColor="#FF5364"
            android:textSize="22sp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>