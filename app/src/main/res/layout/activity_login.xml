<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="233dp"
        android:layout_marginEnd="5dp"
        android:text="Forgot Password?"
        android:textColor="#ff5364"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="175dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/activitylogin_register_button"
        android:text="Register"
        android:textColor="#ff5364"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="242dp"
        android:background="@drawable/loginactivity_custom_relativelayout"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:drawableLeft="@drawable/activitylogin_email_image"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/activitylogin_email_image"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#ff5364"
            android:textColorHint="#ff5364" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:drawableLeft="@drawable/activitylogin_password_image"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/activitylogin_password_image"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#ff5364"

            android:textColorHint="#ff5364" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginBottom="63dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/activitylogin_circle_relativelayout"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout2"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:width="20dp"
            android:height="20dp"
            android:background="@drawable/entry_button"
            android:padding="0dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>