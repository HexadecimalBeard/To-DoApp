<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/activitylogin_loginbutton"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/activitylogin_button_rounded"
        android:text="@string/login_button"
        android:textColor="#FF5364"
        app:layout_constraintBottom_toTopOf="@+id/activitylogin_horizontal_guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_horizontal_guideline2"
        app:layout_constraintVertical_bias="0.83" />

    <LinearLayout
        android:id="@+id/activitylogin_linearlayoutbase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/loginscreenblue_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#35495E" />

        <ImageView
            android:id="@+id/loginscreenwhite_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:color/background_light" />

    </LinearLayout>

    <ImageView
        android:id="@+id/activityLogin_Icon"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@+id/activitylogin_horizontal_guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_linearlayoutbase"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/todo_icon" />

    <RelativeLayout
        android:id="@+id/activitylogin_relativelayout"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/loginactivity_custom_relativelayout"
        app:layout_constraintBottom_toBottomOf="@+id/activitylogin_loginbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_horizontal_guideline1"
        app:layout_constraintVertical_bias="0.82">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activtylogin_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activtylogin_relativelayout_textview"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/Custom.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:textColor="#FF5364" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activtylogin_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activtylogin_edittext_email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/Custom.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textColor="#FF5364" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/activtylogin_relativelayout_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="@string/loginActivity_login"
            android:textColor="#FF5364"
            android:textSize="22sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activitylogin_donthaveanacc_textview"
        android:layout_width="169dp"
        android:layout_height="19dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:text="@string/donthaveanaccount_textview"
        android:textColor="#35495E"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/activitylogin_horizontal_guideline4"
        app:layout_constraintEnd_toStartOf="@+id/activitylogin_vertical_guideline1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/activitylogin_vertical_guideline2"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_horizontal_guideline3" />

    <TextView
        android:id="@+id/activitylogin_signup_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/signup_textview"
        android:textColor="#FF5364"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/activitylogin_horizontal_guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/barrier5"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_horizontal_guideline3" />


    <TextView
        android:id="@+id/activitylogin_forgotpass_textview"
        android:layout_width="152dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/forgotyourpassword_textview"
        android:textColor="#35495e"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/activitylogin_relativelayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_relativelayout"
        app:layout_constraintVertical_bias="0.88" />

    <Button
        android:id="@+id/activitylogin_signingoogle_button"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/googlesigninbttn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_horizontal_guideline5" />

    <ImageView
        android:id="@+id/activitylogin_lineorline_imageview"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toTopOf="@+id/activitylogin_horizontal_guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitylogin_horizontal_guideline4"
        app:layout_constraintVertical_bias="0.26999998"
        app:srcCompat="@drawable/line_or_line" />

    <android.support.constraint.Guideline
        android:id="@+id/activitylogin_horizontal_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/activitylogin_horizontal_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

    <android.support.constraint.Guideline
        android:id="@+id/activitylogin_horizontal_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61" />

    <android.support.constraint.Guideline
        android:id="@+id/activitylogin_horizontal_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <android.support.constraint.Guideline
        android:id="@+id/activitylogin_horizontal_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/activitylogin_vertical_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <android.support.constraint.Guideline
        android:id="@+id/activitylogin_vertical_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="activitylogin_donthaveanacc_textview"
        tools:layout_editor_absoluteY="658dp" />

</android.support.constraint.ConstraintLayout>